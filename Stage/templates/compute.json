{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "resourcePrefix": {
            "type": "string"
        },
        "adminUsername": {
            "type": "string"
        },
        "adminPassword": {
            "type": "securestring"
        },
        "dataNicName": {
            "type": "string"
        },
        "jboxNicName": {
            "type": "string"
        },
        "dataSAName": {
            "type": "string"
        },
        "jboxSAName": {
            "type": "string"
        },
        "vmSize": {
            "type": "string"
        },
        "ubuntuOSVersion": {
            "type": "string"
        },
        "webVmCount": {
            "type": "string"
        },
        "webVmssSAs": {
            "type": "array"
        },
        "webSubnetId": {
            "type": "string"
        },
        "webBackendPoolId": {
            "type": "string"
        }
    },
    "variables": {
        "apiVersion": "2015-06-15",
        "imagePublisher": "Canonical",
        "imageOffer": "UbuntuServer",
        "osDiskName": "osdisk",
        "vhdContainerName": "vhds",
        "dataVMName": "[concat(parameters('resourcePrefix'), 'datavm')]",
        "jboxVMName": "[concat(parameters('resourcePrefix'), 'jboxvm')]",
        "webConfig": {
            "name": "[concat(parameters('resourcePrefix'), 'webvm')]",
            "nicName": "[concat(parameters('resourcePrefix'), 'webvmnic')]",
            "ipConfigName": "[concat(parameters('resourcePrefix'), 'webvmipconfig')]"
        }
    },
    "resources": [
        {
            "apiVersion": "[variables('apiVersion')]",
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[variables('dataVMName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('vmSize')]"
                },
                "osProfile": {
                    "computerName": "[variables('dataVMName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[variables('imagePublisher')]",
                        "offer": "[variables('imageOffer')]",
                        "sku": "[parameters('ubuntuOSVersion')]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "osdisk",
                        "vhd": {
                            "uri": "[concat(reference(concat('Microsoft.Storage/storageAccounts/', parameters('dataSAName')), variables('apiVersion')).primaryEndpoints.blob, variables('vhdContainerName'),'/',variables('osDiskName'),'.vhd')]"
                        },
                        "caching": "ReadWrite",
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('dataNicName'))]"
                        }
                    ]
                }
            }
        },
        {
            "apiVersion": "[variables('apiVersion')]",
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[variables('jboxVMName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('vmSize')]"
                },
                "osProfile": {
                    "computerName": "[variables('jboxVMName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[variables('imagePublisher')]",
                        "offer": "[variables('imageOffer')]",
                        "sku": "[parameters('ubuntuOSVersion')]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "osdisk",
                        "vhd": {
                            "uri": "[concat(reference(concat('Microsoft.Storage/storageAccounts/', parameters('jboxSAName')), variables('apiVersion')).primaryEndpoints.blob, variables('vhdContainerName'),'/',variables('osDiskName'),'.vhd')]"
                        },
                        "caching": "ReadWrite",
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('jboxNicName'))]"
                        }
                    ]
                }
            }
        },
        {
            "apiVersion": "[variables('apiVersion')]",
            "type": "Microsoft.Compute/virtualMachineScaleSets",
            "name": "[variables('webConfig').name]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "[parameters('ubuntuOSVersion')]",
                "tier": "Standard",
                "capacity": "[parameters('webVmCount')]"
            },
            "properties": {
                "overprovision": "true",
                "upgradePolicy": {
                    "mode": "Manual"
                },
                "virtualMachineProfile": {
                    "storageProfile": {
                        "osDisk": {
                            "vhdContainers": [
                                "[concat('https://', parameters('webVmssSAs')[0], '.blob.core.windows.net/', variables('vhdContainerName'))]",
                                "[concat('https://', parameters('webVmssSAs')[1], '.blob.core.windows.net/', variables('vhdContainerName'))]",
                                "[concat('https://', parameters('webVmssSAs')[2], '.blob.core.windows.net/', variables('vhdContainerName'))]",
                                "[concat('https://', parameters('webVmssSAs')[3], '.blob.core.windows.net/', variables('vhdContainerName'))]",
                                "[concat('https://', parameters('webVmssSAs')[4], '.blob.core.windows.net/', variables('vhdContainerName'))]"
                            ],
                            "name": "[variables('osDiskName')]",
                            "caching": "ReadOnly",
                            "createOption": "FromImage"
                        },
                        "imageReference": {
                            "publisher": "[variables('imagePublisher')]",
                            "offer": "[variables('imageOffer')]",
                            "sku": "[parameters('ubuntuOSVersion')]",
                            "version": "latest"
                        }
                    },
                    "osProfile": {
                        "computerNamePrefix": "[variables('webConfig').name]",
                        "adminUsername": "[parameters('adminUsername')]",
                        "adminPassword": "[parameters('adminPassword')]"
                    },
                    "networkProfile": {
                        "networkInterfaceConfigurations": [
                            {
                                "name": "[variables('webConfig').nicName]",
                                "properties": {
                                    "primary": true,
                                    "ipConfigurations": [
                                        {
                                            "name": "[variables('webConfig').ipConfigName]",
                                            "properties": {
                                                "subnet": {
                                                    "id": "[parameters('webSubnetId')]"
                                                },
                                                "loadBalancerBackendAddressPools": [
                                                    {
                                                        "id": "[parameters('webBackendPoolId')]"
                                                    }
                                                ]
                                            }
                                        }
                                    ]
                                }
                            }
                        ]
                    }
                }
            }
        }
    ]
}